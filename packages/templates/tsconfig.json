{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["process.env.d.ts", "./**/*.ts", "swagger/javascript/swagger.js"],
  "exclude": ["node_modules", "./**/*.spec.ts", "build", "coverage"]
}
